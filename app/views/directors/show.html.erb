<div class="container w-50 ">
  <div class="shadow container-sm mt-4 p-4 bg-dark-subtle rounded">
    <p>Name: <span class="fw-bold"><%= @director.name%></span></p>
    <p>Nationality: <span class="fw-bold"><%= @director.nationality%></span></p>
    <p>Favourite Genre: <span class="fw-bold"><%= @director.genre.name%></span></p>
    <p>Birthday: <span class="fw-bold"><%= @director.birth_date%></span></p>
    <div class="container-sm mt-2">
      <%= link_to "Edit", edit_director_path, class: "btn btn-dark"%>
    </div>
  </div>
</div>

<div class="container w-50 mt-3">
  <div class="shadow container-sm mt-4 p-4 bg-dark-subtle rounded text-center">
    <h3 class="pb-3">Movies from <%= @director.name %></h3>
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-sm-3 w-25 position-relative pt-2">
          <p><%= movie.is_released ? "Available" : "Coming Soon..." %></p>
          <a href="<%= movie_path(movie) %>">
          <div class="shadow card">          
            <img src="<%= movie.image_url%>" alt="image" class="card-img-top">
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-start bg-dark bg-opacity-50  bg-gradient">
              <div class="text-white fw-semibold pt-4"><%= "#{movie.release_date.strftime("%Y")}" %></div>
            </div>
            <div class="position-absolute top-0 start-0 w-100 h-100 d-flex justify-content-center align-items-start">
              <div class="text-light fw-semibold pt-1"><%= movie.title %></div>
            </div>
          </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>




   