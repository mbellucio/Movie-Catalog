<%= form_with model: movie, class: "container-sm w-50" do |f| %>
  <div class="mt-3">
    <%= f.label "Title", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>     
  </div>

  <div class="mt-3">
    <%= f.label "Release Date", class: "form-label" %>
    <%= f.date_field :release_date, class: "form-control" %>     
  </div>

  <div class="mt-3">
    <%= f.label "Summary", class: "form-label" %>
    <%= f.text_area :summary, class: "form-control datepicker", rows:"4" %>     
  </div>

  <div class="mt-3 row">
    <div class="col">
      <%= f.label "Poster Image URL", class: "form-label" %>
      <%= f.text_field :image_url, class: "form-control"%> 
    </div>
    <div class="col d-flex justify-content-center align-items-center pt-4 ">
      <div class="form-check">
        <%= f.label "Is Released?", class: "form-check-label" %>
        <%= f.check_box :is_released, class: "form-check-input"%> 
      </div>
    </div>
  </div>

  <div class="mt-3 row">
    <div class="col">
      <%= f.label "Country", class: "form-label" %>
      <%= f.text_field :country, class: "form-control datepicker" %>
    </div>
    <div class="col">
      <%= f.label "Duration", class: "form-label" %>
      <%= f.number_field :duration, class: "form-control datepicker" %>
    </div>    
  </div>

  <div class="mt-3 row">
    <div class="col">
      <%= f.label "Director", class: "form-label" %>
      <%= f.collection_select :director_id, Director.all, :id, :name,  { prompt: "Select a Director" }, { class: "form-select" }%>
    </div>
    <div class="col">
       <%= f.label "Genre", class: "form-label" %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name,  { prompt: "Select a genre" }, { class: "form-select" }%> 
    </div>
  </div>

  <%= f.submit "save", class: "btn btn-dark mt-2"%>  
<% end %>

