<%= form_with model: director, class: "container-sm w-25" do |f| %>
  <div class="mt-3">
    <%= f.label "Director's Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>     
  </div>

  <div class="mt-3">
    <%= f.label "Nationality", class: "form-label" %>
    <%= f.text_field :nationality, class: "form-control" %>     
  </div>

  <div class="mt-3">
    <%= f.label "Birthday", class: "form-label" %>
    <%= f.date_field :birth_date, class: "form-control datepicker" %>     
  </div>

  <div class="mt-3">
    <%= f.label "Favourite Genre", class: "form-label" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name,  { prompt: "Select a genre" }, { class: "form-select" }%>     
  </div>

  <%= f.submit "save", class: "btn btn-dark mt-2"%>  
<% end %>

